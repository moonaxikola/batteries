{
  "extends": ["plugin:@nrwl/nx/react", "../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "libs/ui/web/tsconfig.lib.json"
      }
    },
    {
      "files": ["**/*.test.ts", "**/*.spec.ts", "**/*.spec.tsx", "**/*.d.ts"],
      "parserOptions": {
        "project": "libs/ui/web/tsconfig.spec.json"
      }
    },
    {
      "files": ["**/*.stories.tsx"],
      "parserOptions": {
        "project": "libs/ui/web/.storybook/tsconfig.json"
      }
    }
  ]
}
